<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs220.dreyna3.freshlysqueezed.TopReviewsActivity"
    android:background="@color/lightYellow"
    android:id="@+id/top5MoviesLinearLayout"
    android:padding="15dp">

    <ImageView
        android:id="@+id/MovieImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/default_profile_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/top5MoviesListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ReviewmovieTitle"/>

    <TextView
        android:id="@+id/ReviewmovieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="sans-serif-smallcaps"
        android:text="My Top 5 Reviews"
        android:textSize="30sp"
        android:layout_below="@+id/MovieImageView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"/>
</RelativeLayout>
