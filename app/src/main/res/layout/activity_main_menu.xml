<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="edu.orangecoastcollege.cs220.dreyna3.freshlysqueezed.MainMenuActivity"
                android:background="@drawable/main_menu_bkg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/rough_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/default_profile_image"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:id="@+id/profileImageViewMainMenu"
        android:onClick="setProfileImage"
        android:clickable="true"
        android:focusable="true"/>
    <Button
        android:id="@+id/button5"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:text="Reviews"
        android:background="@drawable/clapperboard_icon"
        android:onClick="toReviewsClick"
        android:textColor="@color/white"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_below="@id/profileImageViewMainMenu"
        android:background="@drawable/clapperboard_icon"
        android:text="Movies"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:onClick="toMoviesClick"/>

    <Button
        android:id="@+id/logoutButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button5"
        android:width="160dp"
        android:onClick="logOutClick"
        android:text="Logout" />
</RelativeLayout>
