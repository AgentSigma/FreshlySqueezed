<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs220.dreyna3.freshlysqueezed.MovieDetailsActivity"
    android:background="@color/white"
    android:padding="15dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/clapperboard_icon"
        android:id="@+id/moviePosterImageView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/moviePosterImageView"
        android:text="Title"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:id="@+id/movieDetailsTitle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movieDetailsTitle"
        android:text="Genre"
        android:textSize="20sp"
        android:id="@+id/movieDetailsGenre"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movieDetailsGenre"
        android:id="@+id/movieDetailsRatingBar"
        android:layout_centerHorizontal="true"
        android:isIndicator="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movieDetailsRatingBar"
        android:textSize="16sp"
        android:text="Description"
        android:textColor="@color/black"
        android:id="@+id/movieDetailsDescription"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:text="What are people saying about this movie?"
        android:onClick="viewMoviesReviews"/>

</RelativeLayout>