<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs220.dreyna3.freshlysqueezed.ReviewsMenuActivity"
    android:background="@drawable/reviews_menu_bkg"
    android:padding="15dp">

    <ImageView
        android:id="@+id/reviewMenuProfileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_profile_image"
        android:onClick="toMainMenuClick"/>

    <Button
        android:id="@+id/button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:width="160dp"
        android:text="Delete reviews"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:onClick="toDeleteReviewsClick"/>

    <TextView
        android:id="@+id/ReviewmovieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Select an option:"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button3"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="214dp"
        android:width="160dp"
        android:text="Write review"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="toWriteReviewClick"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:width="160dp"
        android:text="List all reviews"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:onClick="toListReviewsClick"/>

</RelativeLayout>
